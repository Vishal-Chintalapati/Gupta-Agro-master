<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @if (Session["role"] != null)
    {
        @*@Html.Partial("_TopMenu")*@
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    @Html.ActionLink("Gupta Agro", "BeneficiaryDetails", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="container" style="border-radius:8px 8px 8px 8px;">

                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                            @if (Session["role"].ToString() == "Admin" || Session["role"].ToString() == "Manager")
                            {
                                <li><a href="@Url.Action("BeneficiaryDetails","Home")">Beneficiary Details</a></li>
                                <li><a href="@Url.Action("OandMSheet","Home")">O & M Sheet</a></li>
                                @*<li><a href="@Url.Action("UploadBeneficiary","Home")">Upload Beneficiary Details</a></li>*@

                            }
                            @if (Session["role"].ToString() == "Admin" || Session["role"].ToString() == "Inventory Admin")
                            {
                                <li><a href="@Url.Action("Inventory","Home")">Inventory</a></li>                                                              

                            }
                            @if (Session["role"].ToString() == "Inventory Admin")
                            {
                                <li><a href="@Url.Action("StockDistribution","Home")">Allocate Stock</a></li>
                                <li><a href="@Url.Action("InventoryAdminONM","Home")">O and M</a></li>
                            }
                                                        
                             @if (Session["role"].ToString() == "Manager")
                             {
                                <li><a href="@Url.Action("ComplaintForm","Home")">Complaint Form</a></li>
                             }   
                            @if (Session["role"].ToString() == "Admin")
                            {
                                <li><a href="@Url.Action("Register","Home")">Register Employee</a></li>
                            }
                            @if (Session["role"].ToString() == "Field Assitant")
                            {
                                @*<li><a href="@Url.Action("BeneficiaryDetails","Home")">Beneficiary Details</a></li>*@
                                <li><a href="@Url.Action("OandMSheet","Home")">O & M Sheet</a></li>
                            }
                                @*<li>@Html.ActionLink("About", "About", "Home")</li>
                                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                            </ul>
                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>
                </div>
            </div>

            <div class="container body-content">
                @RenderBody()
            </div>
    }
    else
    {
        @Html.ActionLink("Return to Login","Login","Account")
        <p>User Logged out / does not exist</p>
        <div class="container body-content">
            @RenderBody()
        </div>
    }

    @*<div class="navbar navbar-inverse" style="margin-top:30px; margin-left:4px;margin-right:4px;">*@
        
    @*</div>*@


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
